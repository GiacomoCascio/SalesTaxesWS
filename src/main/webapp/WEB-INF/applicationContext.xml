	<!-- HIBERNATE CONFIGURATION  -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
			<value>it.reply.sales.ws.dao.entity.Goods</value>
        	</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">"${hibernate_active_log}"</prop>
				<prop key="hibernate.min_size">0</prop>
				<prop key="hibernate.max_size">20</prop>
				<prop key="hibernate.timeout">600</prop>
				<prop key="hibernate.max_statements">5</prop>
			</props>
		</property>
	</bean>
	
	<tx:annotation-driven transaction-manager="transactionManager" />
 
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>	
